<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:paddingLeft="@dimen/inside_layout_margin"
        android:paddingRight="@dimen/inside_layout_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消费金额"
            android:textSize="@dimen/intr_text_size"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tv_outcome_details_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="56"
                android:textSize="@dimen/content_text_size"
                android:textColor="@color/content_text_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/money_unit"
                android:textSize="@dimen/intr_text_small_size"
                android:textColor="@color/money_unit_text_color"
                android:layout_marginLeft="@dimen/money_unit_margin"
                android:layout_marginStart="@dimen/money_unit_margin"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:layout_marginTop="@dimen/small_line_margin"
        android:paddingLeft="@dimen/inside_layout_margin"
        android:paddingRight="@dimen/inside_layout_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类型"
            android:textSize="@dimen/intr_text_size"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/outcome_details_type_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_launcher"
                android:textSize="@dimen/content_text_size"
                android:textColor="@color/content_text_color"/>
            <TextView
                android:id="@+id/outcome_details_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="饮食"
                android:textSize="@dimen/intr_text_small_size"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:layout_marginTop="@dimen/small_line_margin"
        android:paddingLeft="@dimen/inside_layout_margin"
        android:paddingRight="@dimen/inside_layout_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消费时间"
            android:textSize="@dimen/intr_text_size"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_outcome_details_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="2015-03-25 16:38"
            android:textSize="@dimen/intr_text_size"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:layout_marginTop="@dimen/small_line_margin"
        android:paddingLeft="@dimen/inside_layout_margin"
        android:paddingRight="@dimen/inside_layout_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="超出预算"
            android:textSize="@dimen/intr_text_size"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tv_budget_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NULL"
                android:textSize="@dimen/content_text_size"
                android:textColor="@color/content_text_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/money_unit"
                android:textSize="@dimen/intr_text_small_size"
                android:textColor="@color/money_unit_text_color"
                android:layout_marginLeft="@dimen/money_unit_margin"
                android:layout_marginStart="@dimen/money_unit_margin"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:layout_marginTop="@dimen/small_line_margin"
        android:paddingLeft="@dimen/inside_layout_margin"
        android:paddingRight="@dimen/inside_layout_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址名称"
            android:textSize="@dimen/intr_text_size"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_outcome_details_addr_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="武汉大学"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/white"
        android:layout_marginTop="@dimen/small_line_margin"
        android:paddingLeft="@dimen/inside_layout_margin"
        android:paddingRight="@dimen/inside_layout_margin">
        <TextView
            android:id="@+id/intr_address_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细地址"
            android:textSize="@dimen/intr_text_size"
            android:layout_marginTop="@dimen/inside_layout_margin"/>
        <TextView
            android:id="@+id/tv_outcome_details_addr_details"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="dfdffdfdfdfdfdfdfdfdfdfdfdfdfdfdfdfdfdfdfdfdfdsfasdfadsfdsafadsf"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_below="@id/intr_address_details"
            android:layout_marginTop="@dimen/inside_layout_margin"
            android:layout_marginLeft="@dimen/inside_layout_margin"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/white"
        android:layout_marginTop="@dimen/small_line_margin"
        android:paddingLeft="@dimen/inside_layout_margin"
        android:paddingRight="@dimen/inside_layout_margin">
        <TextView
            android:id="@+id/intr_outcome_details_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简述"
            android:textSize="@dimen/intr_text_size"
            android:layout_marginTop="@dimen/inside_layout_margin"/>
        <TextView
            android:id="@+id/tv_outcome_details_describe"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="dfdffdfdfdfdfdfdfdfdfdfdfdfdfdfdfdfdfdfdfdfdfdsfasdfadsfdsafadsf"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_below="@id/intr_outcome_details_describe"
            android:layout_marginTop="@dimen/inside_layout_margin"
            android:layout_marginLeft="@dimen/inside_layout_margin"/>
    </RelativeLayout>
    <GridView
        android:id="@+id/gv_outcome_details_photo_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/white"
        android:layout_marginTop="@dimen/small_line_margin"
        android:numColumns="auto_fit"
        android:columnWidth="80dp"/>
</LinearLayout>
