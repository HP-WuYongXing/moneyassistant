<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp">
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_focus_news_list_header"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@android:color/black"
        android:layout_alignParentBottom="true"
        android:alpha="0.5">
        <TextView
            android:id="@+id/tv_header_news_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="标题"
            android:textColor="@android:color/white"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/inside_layout_margin"/>
        <LinearLayout
            android:id="@+id/ll_focus_indicator_view_group"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end|center_vertical"
            android:layout_marginRight="@dimen/inside_layout_margin"
            android:orientation="horizontal">
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>