<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_budget_make_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="于2015-03-23 23:04"
        android:textSize="@dimen/intr_text_small_size"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/inside_layout_margin"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/inside_layout_margin"
        android:paddingRight="@dimen/inside_layout_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="预算类型"
            android:gravity="center_vertical"
            android:textSize="@dimen/intr_text_size"/>
        <TextView
            android:id="@+id/tv_budget_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="总预算"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/intr_text_size"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/inside_layout_margin"
        android:paddingRight="@dimen/inside_layout_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="开始时间"
            android:gravity="center_vertical"
            android:textSize="@dimen/intr_text_size"/>
        <TextView
            android:id="@+id/tv_budget_start_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2015-3-23 7:60"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/intr_text_size"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/inside_layout_margin"
        android:paddingRight="@dimen/inside_layout_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="结束时间"
            android:gravity="center_vertical"
            android:textSize="@dimen/intr_text_size"/>
        <TextView
            android:id="@+id/tv_budget_end_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2015-3-23 7:60"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/intr_text_size"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/inside_layout_margin"
        android:paddingRight="@dimen/inside_layout_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="消费金额"
            android:gravity="center_vertical"
            android:textSize="@dimen/intr_text_size"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tv_cell_budget_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="56"
                android:textSize="@dimen/content_text_size"
                android:textColor="@color/content_text_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/money_unit"
                android:textSize="@dimen/intr_text_small_size"
                android:textColor="@color/money_unit_text_color"
                android:layout_marginLeft="@dimen/money_unit_margin"
                android:layout_marginStart="@dimen/money_unit_margin"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
