<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/tv_input_outcome_money"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:hint="花费金额"
        android:paddingLeft="@dimen/inside_layout_margin"
        android:paddingRight="@dimen/inside_layout_margin"
        android:inputType="numberDecimal"
        android:gravity="center_vertical"/>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginTop="@dimen/outside_layout_margin"
    android:layout_weight="1"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/tv_input_outcome_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:hint="输入类型"
        android:paddingLeft="@dimen/inside_layout_margin"
        android:gravity="center_vertical"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/small_line_margin"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_outcome_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingLeft="@dimen/inside_layout_margin"
            android:hint="输入时间(格式:月-日 小时:分钟)"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/small_line_margin"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_outcome_addr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:hint="输入地点"
            android:paddingLeft="@dimen/inside_layout_margin"
            android:gravity="center_vertical"/>

    </LinearLayout>
    <EditText
        android:id="@+id/et_outcome_describe"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="@dimen/outside_layout_margin"
        android:background="@color/white"
        android:hint="输入简述"
        android:paddingLeft="@dimen/inside_layout_margin"
        android:inputType="textMultiLine"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="@dimen/outside_layout_margin"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_add_outcome_pic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+添加图片"
            android:background="@color/white"
            android:gravity="center"/>
        <GridView
            android:id="@+id/gv_outcome_picture_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:columnWidth="75dp"
            android:gravity="center"
            android:horizontalSpacing="@dimen/small_line_margin"
            android:listSelector="@color/blue"
            android:numColumns="auto_fit"
            android:layout_gravity="fill_horizontal"
            android:stretchMode="columnWidth"
            android:layout_marginLeft="@dimen/small_line_margin"
            android:background="@color/white"
            android:paddingTop="@dimen/inside_layout_margin"/>
        </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_save_outcome_item"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/outside_layout_margin"
        android:layout_weight="1"
        android:background="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="确定"/>
        </RelativeLayout>
</LinearLayout>