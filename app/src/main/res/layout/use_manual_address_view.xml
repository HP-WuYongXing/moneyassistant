<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical" >
    <EditText
        android:id="@+id/et_address_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:paddingLeft="@dimen/inside_layout_margin"
        android:paddingRight="@dimen/inside_layout_margin"
        android:hint="位置名称"/>
    <EditText
        android:id="@+id/et_address_details"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="@dimen/outside_layout_margin"
        android:background="@color/white"
        android:paddingLeft="@dimen/inside_layout_margin"
        android:paddingRight="@dimen/inside_layout_margin"
        android:hint="位置具体信息"/>
	<RelativeLayout
	    android:id="@+id/rl_address_ensure"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:layout_marginTop="@dimen/outside_layout_margin"
	    android:background="@color/white"
	    >
	    <TextView 
	      android:layout_width="match_parent"
	      android:layout_height="match_parent"
	      android:gravity="center"
	      android:text="确定"/>
	</RelativeLayout>
	<View
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="5"/>
</LinearLayout>
