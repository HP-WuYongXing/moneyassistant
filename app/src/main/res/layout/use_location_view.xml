<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.oliver.moneyassistant.ui.UseLocationFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <EditText
            android:id="@+id/et_keywords"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/white"
            android:paddingLeft="@dimen/inside_layout_margin"
            android:hint="位置关键字"/>
        <LinearLayout
            android:id="@+id/ll_location_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/small_line_margin"
                android:gravity="center"
                android:background="@color/white"
                android:text="定位"/>
            </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/outside_layout_margin"
        android:orientation="vertical"
        android:layout_weight="3">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="当前位置"
            android:layout_weight="1"
            android:paddingLeft="@dimen/inside_layout_margin"
            android:background="@color/white"
            android:gravity="center_vertical"/>
        <EditText
            android:id="@+id/et_current_location"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/white"
            android:layout_marginTop="@dimen/small_line_margin"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_marginTop="@dimen/outside_layout_margin"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="按照关键字得到的周边位置信息"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/inside_layout_margin"/>
        <ListView
            android:id="@+id/lv_around_location"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_marginTop="@dimen/small_line_margin"
            android:background="@color/white"/>
    </LinearLayout>
</LinearLayout>
